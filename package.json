### src/index.ts
import express from 'express';
import { mcpServer } from './mct/server';
const app = express();
const PORT = process.env.PORT || 3000;
app.use(express.json());
mcpServer.connect({ app });
app.listen(PORT, () => {
  console.log(`MCT Localization server running on port ${PORT}`);
});
### src/api/routes.ts
import { Router } from 'express';
import { getLocationData } from '../services/locationService';
const router = Router();
router.get('/location/:id', async (req, res) => {
  try {
    const data = await getLocationData(req.params.id);
    res.json(data);
  } catch (e) {
    res.status(500).json({ error: e.message });
  }
});
export default router;
### src/db/schema.ts
import mongoose from 'mongoose';
const LocationSchema = new mongoose.Schema({
  locationId: String,
  name: String,
  description: String,
  latitude: Number,
  longitude: Number
});
export const Location = mongoose.model('Location', LocationSchema);
### src/mct/server.ts
import { McpServer } from '@modelcontextprotocol/sdk';
import { locationTool } from './tools';
export const mcpServer = new McpServer({
  name: 'mct-localization',
  version: '1.0.0'
});
mcpServer.registerTool(locationTool);
### src/mct/tools.ts
import { z } from 'zod';
import { getLocationData } from '../services/locationService';
export const locationTool = {
  name: 'get-location',
  inputSchema: z.object({
    locationId: z.string()
  }),
  handler: async ({ locationId }) => {
    return await getLocationData(locationId);
  }
};
### src/services/locationService.ts
import { Location } from '../db/schema';
export async function getLocationData(locationId: string) {
  return Location.findOne({ locationId }).exec();
}